{
    "name": "Pop-Boy 3000",
    "description": "Simple popup bar for Chromium browsers, which shows up under cursor after text has been highlighted. You can Copy, Search, and see unit/currency conversions.",
    "version": "0.2.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "./popup/popup.html"
    },
    "options_page": "./options/options.html",
    "icons": {"128": "icon.png"},
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting",
        "search"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}